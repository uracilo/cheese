<p id="notice"><%= notice %></p>

<h1>User Products</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Productdescription</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_products.each do |user_product| %>
      <tr>
        <td><%= user_product.user %></td>
        <td><%= user_product.productdescription %></td>
        <td><%= user_product.quantity %></td>
        <td><%= user_product.price %></td>
        <td><%= user_product.weight %></td>
        <td><%= link_to 'Show', user_product %></td>
        <td><%= link_to 'Edit', edit_user_product_path(user_product) %></td>
        <td><%= link_to 'Destroy', user_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Product', new_user_product_path %>
